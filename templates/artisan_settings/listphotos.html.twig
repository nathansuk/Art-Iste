{% extends 'settingsbase.html.twig' %}

{% block title %}{{ site_name }} : {{ controller_name }}{% endblock %}
{% block settingsspace %}

        <div class="liste-photos">
        {% for photo in listPhotos %}
            {% if photo.Valid == false %}
                <span class="badge bg-warning">En attente de validation</span>
            {% else %}
                <span class="badge bg-success">Valid√©e</span>
            {% endif %}
            <div class="card photo-card w-100">
                <img src="{{ asset('assets/upload/book_photo/' ~ photo.imageName) }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <a href="{{ path('delete_photo',{'id': photo.id}) }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        {% endfor %}
        </div>


{% endblock %}
